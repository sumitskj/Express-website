extends layout

block content
      .container
              h1 Contact Us
              form(method='post', action='/contact/send')
                      .form-group
                                label Name
                                input.form-control(type='text', name='name', placeholder='Enter Name')
                      .form-group
                                label Email
                                input.form-control(type='text', name='email', placeholder='Enter Email ID')

                      .form-group
                                label Message
                                input.form-control(type='textarea', name='name', placeholder='Enter Message')

                      button.btn-default.btn-lg(type='submit', value='Submit') Submit
